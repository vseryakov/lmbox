<page name="calendardaypage" background="background.jpg">
  <help>
  Use arrow keys/buttons to select time.

  Media button will show movie/music files to fire on alarm.
  </help>
  <event name="prevpage"> lmbox postevent home </event>
  <event name="nextpage"> lmbox postevent end </event>
  <label name="alarmclock" x="20" y="15" width="300" height="20" template="clocklabel" />
  <label name="alarmtitle" x="500" y="15" template="titlelabel">lmBox: Alarm</label>

  <label x="30" y="50" template="textlabel">Time:</label>
  <listbox name="hourslist" x="100" y="50" width="45" height="20" template="t_listbox5" >
  </listbox>
  <label x="145" y="50" template="textlabel">:</label>
  <listbox name="minuteslist" x="160" y="50" width="45" height="20" template="t_listbox5" >
  </listbox>
  <label x="30" y="85" template="textlabel">Alarm:</label>
  <textfield name="alarmtext" x="100" y="85" width="100" template="t_textfield" />
  <label x="30" y="120" template="textlabel">Type:</label>
  <listbox name="typelist" x="110" y="120" width="100" height="20" template="t_listbox5" >
    <event name="OnSelectionChange">
      lmbox set alarmfile caption Choose...
    </event>
  </listbox>
  <label x="30" y="155" template="textlabel">Media:</label>
  <button name="alarmfile" x="110" y="155" caption="Choose..." template="t_button" color="#1a4f7b" height="20">
    <event name="OnClick">
      calendar_media
    </event>
    <event name="OnGotFocus">
      lmbox set alarmstatus caption [lmbox get alarmfile caption]
    </event>
    <event name="OnLostFocus">
      lmbox set alarmstatus caption ""
    </event>
  </button>
  <label x="30" y="190" template="textlabel">Repeat:</label>
  <listbox name="repeatlist" x="110" y="190" width="100" height="20" template="t_listbox5" />

  <button x="30" y="380" caption="Add" template="t_button2" action="play">
    calendar_add
  </button>
  <button x="130" y="380" caption="Reset" template="t_button2">
    calendar_reset
  </button>
  <button x="230" y="380" caption="Delete" template="t_button2">
    calendar_remove
  </button>
  <button x="330" y="380" caption="Back" template="t_button2" action="cancel">
    lmbox setpage calendarpage
  </button>

  <listbox name="alarmlist" x="220" y="60" width="350" height="270" template="t_alarmlist">
    <event name="OnSelectionChange">
      calendar_info
    </event>
    <event name="OnGotFocus">
      calendar_info
    </event>
    <event name="OnLostFocus">
      lmbox set alarmstatus caption ""
    </event>
  </listbox>
  <label name="alarmstatus" x="30" y="410" width="450" height="40" template="statuslabel" fontcolor="#000000"></label>
</page>

