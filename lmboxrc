set bgimage [glob -nocomplain [file normalize ~/lmbox/images/bg/*]]
lappend bgimage lmbox.jpg

lmbox setconfig bgimage [lindex $bgimage [expr round(rand()*100) % [llength $bgimage]]]
lmbox setconfig hidecursor 1
lmbox setconfig xscale 1
lmbox setconfig yscale 1

lmbox setkey f1 help
lmbox setkey ctrl+m mute
lmbox setkey ctrl+i info
lmbox setkey ctrl+u volumeup
lmbox setkey ctrl+d volumedown
lmbox setkey ctrl+p play
lmbox setkey ctrl+s stop
lmbox setkey ctrl+z pause
lmbox setkey ctrl+r red
lmbox setkey ctrl+g green
lmbox setkey ctrl+y yellow
lmbox setkey ctrl+b blue

lmbox setkey 0 number0
lmbox setkey 1 number1
lmbox setkey 2 number2
lmbox setkey 3 number3
lmbox setkey 4 number4
lmbox setkey 5 number5
lmbox setkey 6 number6
lmbox setkey 7 number7
